<div class="row">
  <div class="span6">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>

      <legend>Register</legend>

      <div class="well">
       <div><%= f.input :first_name, :autofocus => true %></div>

       <div><%= f.input :last_name %></div>

       <div><%= f.input :profile_name %></div>

       <div><%= f.input :email %></div>

       <div><%= f.input :password %></div>

       <div><%= f.input :password_confirmation %></div>

       <div class="controls"><%= f.button :submit, "Sign up" %></div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>